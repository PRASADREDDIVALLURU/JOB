<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/boooooks"
    tools:context=".Project_link">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Link"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:id="@+id/personal"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No.of projects"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:id="@+id/projects"/>


    <ImageView
        android:id="@+id/action_image"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:src="@drawable/ic_action_name" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project link:1"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:id="@+id/project1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project link:2"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:id="@+id/project2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project link:3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:id="@+id/project3"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project link:4"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:id="@+id/project4"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project link:5"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:id="@+id/project5"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:textSize="20dp"
        android:onClick="Upload"
        android:textColor="@color/colorPrimaryDark"
        android:background="#ffff"
        android:layout_marginTop="25dp"
        />
    <Button
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="Goback"
        android:layout_marginTop="20dp"
        android:background="#78EF67"
        android:text="GO BACK" />


</LinearLayout>