<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rrrr"
    tools:context=".RegAct2">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTERNAL DETAILS"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:id="@+id/personal"/>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:onClick="Personaldetails"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Educational details"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:onClick="Educationaldetails"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requirements"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="Requirements"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project links"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:onClick="Projectlinks"
        android:layout_marginTop="30dp"
        />


    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:onClick="Register"
        android:background="@color/colorAccent"
        android:layout_marginTop="35dp"
        />

</LinearLayout>
